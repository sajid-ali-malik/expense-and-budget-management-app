<h1>My Budgets</h1>
<%= link_to 'New Budget', new_budget_path %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Note</th>
      <th>Amount</th>
      <th>Spent</th>
      <th>Period</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @budgets.each_with_index do |budget, index| %>
      <tr>
        <td><%= budget.category.name %></td>
        <td><%= budget.notes%>
        <td><%= budget.amount %></td>
        <td><%= @spent_amounts[index] %></td>
        <td><%= budget.budget_month.strftime("%B %Y") %></td>
        <td>
          <%= link_to 'Show', budget_path(budget) %>
          <%= link_to 'Edit', edit_budget_path(budget) %>
          <%= button_to 'Delete', budget_path(budget), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
